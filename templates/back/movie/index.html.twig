{% extends 'back/base.html.twig' %}

{% block title %}Show index
{% endblock %}

{% block subBody %}
	<h1>Show index</h1>
	<a href="{{ path('app_back_movie_new') }}">Create new</a>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Duration</th>
				<th>Rating</th>
				<th>Type</th>
				<th>ReleaseDate</th>
				<th>Country</th>
				<th>Poster</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for show in shows %}
				<tr>
					<td>{{ show.id }}</td>
					<td>{{ show.title }}</td>
					<td>{{ show.duration }}</td>
					<td>{{ show.rating }}</td>
					<td>{{ show.type }}</td>
					<td>{{ show.releaseDate ? show.releaseDate|date('Y-m-d') : '' }}</td>
					<td>{{ show.country }}</td>
					<td>{{ show.poster }}</td>
					<td>
						<a href="{{ path('app_back_movie_show', {'id': show.id}) }}">show</a>
						<a href="{{ path('app_back_movie_edit', {'id': show.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
