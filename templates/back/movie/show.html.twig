{% extends 'back/base.html.twig' %}

{% block title %}Show
{% endblock %}

{% block subBody %}
	<h1>Show</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ show.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ show.title }}</td>
			</tr>
			<tr>
				<th>Duration</th>
				<td>{{ show.duration }}</td>
			</tr>
			<tr>
				<th>Summary</th>
				<td>{{ show.summary }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ show.synopsis }}</td>
			</tr>
			<tr>
				<th>Rating</th>
				<td>{{ show.rating }}</td>
			</tr>
			<tr>
				<th>Type</th>
				<td>{{ show.type }}</td>
			</tr>
			<tr>
				<th>ReleaseDate</th>
				<td>{{ show.releaseDate ? show.releaseDate|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ show.country }}</td>
			</tr>
			<tr>
				<th>Poster</th>
				<td>{{ show.poster }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_back_movie_index') }}">back to list</a>

	<a href="{{ path('app_back_movie_edit', {'id': show.id}) }}">edit</a>

	{{ include('back/movie/_delete_form.html.twig') }}
{% endblock %}
