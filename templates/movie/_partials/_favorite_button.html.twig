{% if is_granted("ROLE_USER") %}

{% if show in app.user.shows %}
<a href="{{ path('app_favorite_remove', {id: show.id})}}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i
        class="bi bi-bookmark-x-fill"></i></a>
{% else %}
<a href="{{ path('app_favorite_add', {id: show.id}) }}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i
        class="bi bi-bookmark-plus"></i></a>
{% endif %}
{% endif %}