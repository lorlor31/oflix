{% extends 'base.html.twig' %}

{% block title %}Mes films favoris{% endblock %}
{% block nav_favorites %} active {% endblock %}

{% block body %}

    <div class="container-xl bg-light p-5 border-top">
        <div class="row mb-2">

            <h2 class="text-muted fw-bold mb-4">Ma liste</h2>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for currentMovieId, currentMovie in movieList %}
            <div class="col-6">

                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm bg-white position-relative">
                    <div class="col-4 movie__poster" style="background-image: url({{ currentMovie.poster }});">
                        <img src="{{ asset('images/poster-placeholder.png') }}" class="img-fluid">
                        <!-- img src="https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg" class="img-fluid" -->
                    </div>
                    <div class="col-8 p-4 d-flex flex-column position-static">
                        <a href="{{ path('app_movie_favorites_remove', {id: currentMovieId})}}" class="movie__favorite fs-1 my-2 mx-3 link-danger"><i class="bi bi-bookmark-x-fill"></i></a>
                        <strong class="d-inline-block mb-2 text-primary">{{ currentMovie.type }}</strong>
                        <h3 class="mb-1">{{ currentMovie.title }}</h3>
                        <div class="mb-1 text-muted">{{ currentMovie.duration }} min</div>
                        <a href="{{ path('app_movie_show', {id : currentMovieId}) }}" class="fs-1 mt-3 text-danger align-self-start">
                            <i class="bi bi-arrow-right-square"></i>
                        </a>
                    </div>
                </div>
            
            </div>
            {% endfor %}


        </div>

        <div class="col">
            <a href="" class="btn btn-danger btn-sm" onclick="return confirm('Vider votre liste de favoris ?');">Vider la liste</a>
        </div>

    </div>

{% endblock %}
