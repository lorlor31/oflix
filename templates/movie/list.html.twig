{% extends 'base.html.twig' %}

{% block title %}Liste des films disponibles{% endblock %}

{% block body %}
<div class="container-xl bg-light p-5 border-top">

    <div class="row mb-2">

        <div class="col-12 col-lg-3">
            <h2 class="text-center text-muted fw-bold mb-4">Les genres</h2>
            <div class="d-flex flex-column flex-wrap list-unstyled justify-content-center">
                {% for genre in genres %}
                    <a class="btn btn-sm btn-outline-danger mx-1 mb-2" href={{ path('app_movie_genre', {genre: genre}) }}>{{genre}}</a>
                {% endfor %}
            </div>
        </div>

        <div class="col-12 col-lg-9">

            <h2 class="text-muted fw-bold mb-4">Les films et séries/Résultats de recherche</h2>
            {% include 'movie/_partials/_movie_list.html.twig' %}
        </div>

        <div class="col-lg-9 offset-lg-3">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link">&laquo;</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item" aria-current="page">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </div>

    </div>

</div>

{% endblock %}